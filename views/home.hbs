{{> header}} 

<main class="bg-gray-50">
    <section class="w-full container mx-auto">
        <div class="flex flex-col items-center pt-20 pb-5">
            <h1 class="font-bold text-gray-800 uppercase text-5xl">
                The Tech Blog
            </h1>
            <p class="text-lg text-gray-600 mt-1">
                A community for developers
            </p>
        </div>
    </section>
    
    <section>
        <div class="flex justify-center">
            <form class="mt-8 mb-10 lg:w-2/5 md:w-3/5 sm:w-3/4">
                <div class="flex">
                    <button id="dropdown-button" data-dropdown-toggle="dropdown-cats" class="flex-shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-sm font-medium text-center text-gray-900 bg-gray-100 border border-gray-300 hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100" type="button">All categories <svg aria-hidden="true" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg></button>
                    <div id="dropdown-cats" class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow w-44" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="top" style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(897px, 5637px, 0px);">
                        <ul class="py-1 text-sm text-gray-80" aria-labelledby="dropdown-button">
                            <li>
                                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100">1</button>
                            </li>
                            <li>
                                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100">2</button>
                            </li>
                            <li>
                                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100">3</button>
                            </li>
                            <li>
                                <button type="button" class="inline-flex w-full px-4 py-2 hover:bg-gray-100">4</button>
                            </li>
                        </ul>
                    </div>
                    <div class="relative w-full">
                        <input type="search" id="search-dropdown" class="block p-2.5 w-full z-20 text-sm text-gray-800 bg-gray-50 border-l-gray-50 border-l-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Search posts..." required>
                        <button type="submit" class="absolute top-0 right-0 p-2.5 text-sm font-medium text-white border bg-teal-700 focus:ring-4 focus:outline-none focus:ring-blue-30">
                            <svg aria-hidden="true" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                            <span class="sr-only">Search</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- <div class="w-full flex px-10">
            <h2 class="text-3xl leading-tight md:text-4xl md:leading-tight lg:text-4xl lg:leading-tight font-bold text-gray-800">Featured Posts</h2>
        </div> -->
        
        <div class="container mx-auto flex flex-wrap">
            <section class="flex flex-col w-full md:w-2/3 px-6">
                <div class="flex flex-wrap -mx-4 px-3">
                    {{#each posts}}
                    {{> post this}}
                    {{/each}}
                </div>
            </section>
            
            <aside class="w-full md:w-1/3 flex flex-col items-center px-3">
                <div class="w-full bg-white shadow flex flex-col mb-4 p-6">
                    <p class="text-xl font-semibold pb-5">Join the community</p>
                    <p class="pb-2">If you would like to be part of the conversation and start sharing your thoughts and opinions on software development, sign yourself up! </p>
                    {{#if logged_in}}
                    <a href="/dashboard" class="w-full bg-teal-700 text-white font-bold text-sm uppercase rounded hover:bg-teal-600 flex items-center justify-center px-2 py-3 mt-4">
                        Sign Up Now
                    </a>
                    {{else}}
                    <a href="/signup" class="w-full bg-teal-700 text-white font-bold text-sm uppercase rounded hover:bg-teal-600 flex items-center justify-center px-2 py-3 mt-4">
                        Sign Up Now
                    </a>
                    {{/if}}
                </div>
            </aside>
        </div>
    </section>
</main>

{{> footer}}